# -----------------------------------------------------------------------------
# Go
# -----------------------------------------------------------------------------

export X_HOME="/opt/X11"
export BREW="/opt/homebrew"
export GO_HOME="/usr/local/go"
export MONO_HOME="/Library/Frameworks/Mono.framework/Versions/Current"
export DOCKER_HOME="${HOME}/.docker"
export GO_INSTALL_HOME="${HOME}/go"
export ZIG_HOME="${HOME}/.local/zig"
export CARGO_HOME="${HOME}/.local/cargo"
export VERIBLE_HOME="${HOME}/.local/opt/verible"
export JULIAUP_HOME="${HOME}/.local/opt/juliaup"
export OSS_CAD_SUITE_HOME="${HOME}/.local/opt/oss-cad-suite"

# ------------------------------------------------------------------------------
# Brew Installations
# ------------------------------------------------------------------------------

export TAR_HOME="${BREW}/opt/gnu-tar"
export FIND_HOME="${BREW}/opt/findutils"
export FLEX_HOME="${BREW}/opt/flex"
export RUBY_HOME="${BREW}/opt/ruby"
export LLVM_HOME="${BREW}/opt/llvm"
export MAKE_HOME="${BREW}/opt/make"
export CMAKE_HOME="${BREW}/opt/cmake"

# -----------------------------------------------------------------------------
# PATH
# -----------------------------------------------------------------------------

# Binaries under ~/.local/opt/<package>/bin
export PATH=$GO_HOME/bin:${PATH}
export PATH=$ZIG_HOME/bin:${PATH}
export PATH=$MONO_HOME/bin:${PATH}
export PATH=$CARGO_HOME/bin:${PATH}
export PATH=$DOCKER_HOME/bin:${PATH}
export PATH=$JULIAUP_HOME/bin:${PATH}
export PATH=$VERIBLE_HOME/bin:${PATH}
export PATH=$GO_INSTALL_HOME/bin:${PATH}
export PATH=${OSS_CAD_SUITE_HOME}/bin:${PATH}

# Binaries Under opt/homebrew/opt/<package>/bin
export PATH=${RUBY_HOME}/bin:${PATH}
export PATH=${FLEX_HOME}/bin:${PATH}
export PATH=${LLVM_HOME}/bin:${PATH}

# Binaries Under opt/homebrew/opt/<package>/libexec/gnubin
export PATH=${TAR_HOME}/libexec/gnubin:${PATH}
export PATH=${FIND_HOME}/libexec/gnubin:${PATH}
export PATH=${LLVM_HOME}/libexec/gnubin:${PATH}
export PATH=${MAKE_HOME}/libexec/gnubin:${PATH}

# -----------------------------------------------------------------------------
# C Include Paths
# -----------------------------------------------------------------------------

export CPATH=/usr/local/include:$CPATH
export CPATH=$HOME/.local/include:$CPATH
export CPATH=${BREW}/include:$CPATH
export CPATH=${X_HOME}/include:$CPATH
export CPATH=$LLVM_HOME/include:$CPATH
export CPATH=$ZIG_HOME/include:$CPATH
export CPATH=$RUBY_HOME/include:$CPATH
export CPATH=$FLEX_HOME/include:$CPATH
export CPATH=${X_HOME}/freetype2/include:$CPATH

# -----------------------------------------------------------------------------
# Linker Paths
# -----------------------------------------------------------------------------

export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$HOME/.local/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$ZIG_HOME/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$RUBY_HOME/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$FLEX_HOME/lib:$LD_LIBRARY_PATH

export LD_LIBRARY_PATH=${BREW}/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=${X_HOME}/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=${LLVM_HOME}/lib:$LD_LIBRARY_PATH

# --------------------------------------------------------------------------------
# CPP Flags
# --------------------------------------------------------------------------------

export CPPFLAGS="-I${BREW}/include"
export CPPFLAGS="-I${X_HOME}/include ${CPPFLAGS}"
export CPPFLAGS="-I${LLVM_HOME}/include ${CPPFLAGS}"

# --------------------------------------------------------------------------------
# Linker Flags
# --------------------------------------------------------------------------------

export LDFLAGS="-L${BREW}/lib"
export LDFLAGS="-L${X_HOME}/lib ${LDFLAGS}"
export LDFLAGS="-L${LLVM_HOME}/lib ${LDFLAGS}"

# --------------------------------------------------------------------------------
# UV
# --------------------------------------------------------------------------------

export UV_PREVIEW=1

# -----------------------------------------------------------------------------
# Local Variables
# -----------------------------------------------------------------------------

# Common Directories
git="${HOME}/.project/git"
project="${HOME}/.project"
templates="${HOME}/.project/templates"
playground="${HOME}/.project/playground"

# Local Git Repositories
os="${git}/university/operating-systems-2025a"
mom="${git}/mom"
uni="${git}/university"
dot="${git}/SagiKimhi/dotfiles"
xv6="${git}/tools/xv6-public"
mygit="${git}/SagiKimhi"
giliot="${git}/wiliot"
todo="${HOME}/.todo/todo.txt"
