{
    "UVM-Object": {
        "prefix": "uvo",
        "body": [
            "`ifndef ${TM_FILENAME_BASE/(.*)/${1:/upcase}/}_${TM_FILENAME/.*\\.(.+$)/${1:/upcase}/}",
            "`define ${TM_FILENAME_BASE/(.*)/${1:/upcase}/}_${TM_FILENAME/.*\\.(.+$)/${1:/upcase}/}",
            "",
            "",
            "// ---------------------------------------------------------------------------",
            "// Class: ${classname}",
            "// ---------------------------------------------------------------------------",
            "// ",
            "// Description-TBD.",
            "// ",
            "// ---------------------------------------------------------------------------",
            "",
            "class ${classname}",
            "extends ${baseclass};",
            "    `define nice_init_cb",
            "    `nice_object_utils(${classname})",
            "",
            "    // ---------------------------------------------------------------------------",
            "    // Group: Variables",
            "    // ---------------------------------------------------------------------------",
            "",
            "    // ---------------------------------------------------------------------------",
            "    // Internal",
            "    // ---------------------------------------------------------------------------",
            "",
            "    virtual function void init();",
            "    endfunction",
            "",
            "endclass: ${classname}",
            "",
            "`endif // ${TM_FILENAME_BASE/(.*)/${1:/upcase}/}_${TM_FILENAME/.*\\.(.+$)/${1:/upcase}/}"
        ]
    },

